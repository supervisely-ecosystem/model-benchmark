{
    "name": "model_benchmark_semseg_devcontainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.jupyter-renderers"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python3"
            }
        }
    },
    "runArgs": [
        "--gpus",
        "all",
        "--ipc=host",
        "--net=host",
        "--cap-add",
        "NET_ADMIN",
        "--runtime=nvidia"
    ]
}